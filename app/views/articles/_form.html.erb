<% if @article.errors.any? %>
  <% @article.errors.full_messages.each do |msg| %>
    <ul><li><%= msg %></li></ul>
    <% end %>
<% end %>

<%= form_for @article do |f| %>
<p>
  <%= f.label :title%>
  <%= f.text_field :title%>
  <br>
  <%= f.label :description%>
  <%= f.text_area :description%>
  <br>
  <%= f.submit %>
</p>

<% end %>