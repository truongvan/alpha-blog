<%= render 'shared/errors', obj: @article %>

<div class="row">
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <%= f.label :title, class: "col-sm-2 control-label" %>
        <div class="col-sm-8">
          <%= f.text_field :title, class: "form-control", id: "inputEmail3", placeholder: "Input title"  %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :description, class: "col-sm-2 control-label" %>
        <div class="col-sm-8">
          <%= f.text_area :description, rows: 10, class: "form-control", id: "inputEmail3", placeholder: "Input description"  %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
          <%= f.submit class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
    <div class="center">
      [<%= link_to 'Back to article list', articles_path %>]
    </div>
  
</div>