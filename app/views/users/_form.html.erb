<%= render 'shared/errors', obj: @user %>

<div class="row">
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <%= f.label :username, class: "col-sm-2 control-label" %>
        <div class="col-sm-8">
          <%= f.text_field :username, class: "form-control", id: "inputEmail3", placeholder: "Input username"  %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :email, class: "col-sm-2 control-label" %>
        <div class="col-sm-8">
          <%= f.text_field :email, class: "form-control", id: "inputEmail3", placeholder: "Input email"  %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, class: "col-sm-2 control-label" %>
        <div class="col-sm-8">
          <%= f.text_field :password, class: "form-control", id: "inputEmail3", placeholder: "Enter your password"  %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
          <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: 'btn btn-primary btn-lg') %>
        </div>
      </div>
    <% end %>
    <div class="center">
      [<%= link_to 'Back to article list', articles_path %>]
    </div>
</div>